<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/seller_product_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/logocolor"
            android:gravity="center_horizontal" />
        <ImageView
            android:id="@+id/seller_product_view_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/seller_product_view_name"
            android:scaleType="center"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/seller_product_view_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:layout_below="@+id/seller_product_view_image"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="@color/logocolor"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/seller_product_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_below="@+id/seller_product_view_price"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/logocolor"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/seller_product_approved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product State"
            android:layout_below="@+id/seller_product_view_description"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/logocolor"
            android:gravity="center_horizontal" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>