<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.FrontPage"
    android:background="@drawable/login"
    >

    <ImageView
        android:id="@+id/trima_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/trima"
        android:layout_marginLeft="95dp"/>

    <TextView
        android:id="@+id/hi"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="158dp"
        android:layout_marginRight="148dp"
        android:layout_marginTop="170dp"
        android:text="Hi"
        android:textStyle="bold"
        android:textSize="24dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hi"
        android:layout_marginTop="10dp"
        android:text="Choose Your new Style"
        android:textStyle="bold"
        android:textSize="24dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/join"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@+id/start"
        android:background="@drawable/input_design"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="Join"
        android:textColor="#ffffff"
        android:textSize="18dp"
        />
    <Button
        android:id="@+id/member"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_below="@+id/join"
        android:textAllCaps="false"
        android:text="Alredy, have an account? Login"
        android:textColor="#ffffff"
        android:textSize="18dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seller_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Are you seller Account?"
            android:layout_below="@+id/member"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="17dp"
            />
    </LinearLayout>
</RelativeLayout>