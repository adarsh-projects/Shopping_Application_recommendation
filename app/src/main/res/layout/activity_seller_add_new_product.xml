<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Seller.SellerAddNewProductActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/from_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/select_product_image"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/gallery_image_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose image"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:layout_below="@+id/product_image"/>
            <EditText
                android:id="@+id/Upload_product_name"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="Product Name"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/input_design"
                android:layout_below="@+id/gallery_image_upload"
                />
            <EditText
                android:id="@+id/Upload_product_Description"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="Product Description"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/input_design"
                android:layout_below="@+id/Upload_product_name"
                />
            <EditText
                android:id="@+id/Upload_product_Price"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:hint="Product Price"
                android:inputType="number"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/input_design"
                android:layout_below="@+id/Upload_product_Description"
                />
            <EditText
                android:id="@+id/Upload_product_quantity"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:hint="Quantity"
                android:inputType="number"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/Upload_product_Price"
                android:background="@drawable/input_design"
                android:layout_below="@+id/Upload_product_Description"
                />
            <EditText
                android:id="@+id/Upload_product_discount"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="Product Discount ( Optinal )"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/input_design"
                android:layout_below="@+id/Upload_product_Price"
                />
            <Button
                android:id="@+id/Upload_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add product"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:background="@drawable/button"
                android:layout_margin="5dp"
                android:layout_below="@+id/Upload_product_discount"
                android:gravity="center" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>