<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ConfirmFinalOrderActivity">
    <TextView
        android:id="@+id/confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm your shipment details"
        android:textSize="20dp"
        android:textColor="@color/logocolor"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:gravity="center" />
    <EditText
        android:id="@+id/shippment_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/confirm_order"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/logocolor"
        android:background="@drawable/input_design"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Name"/>
    <EditText
        android:id="@+id/shippment_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/shippment_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/logocolor"
        android:background="@drawable/input_design"
        android:layout_marginRight="20dp"
        android:hint="Your Phone"/>
    <EditText
        android:id="@+id/shippment_home_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/shippment_phone_number"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/logocolor"
        android:background="@drawable/input_design"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Home Address"/>
    <EditText
        android:id="@+id/shippment_city_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_below="@+id/shippment_home_address"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/logocolor"
        android:background="@drawable/input_design"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your City"/>
    <Button
        android:id="@+id/oder_placed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Place Order"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>