<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.PasswordResetActivity">

    <RelativeLayout
        android:id="@+id/reset_page"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/logocolor"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/reset_page_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/reset_page"
        android:hint="Please write your phone number.."/>
    <TextView
        android:id="@+id/reset_page_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security question?"
        android:gravity="center"
        android:layout_below="@+id/reset_page_phone_number"
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/reset_page_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/reset_page_header"
        android:hint="What is your nick name"/>
    <EditText
        android:id="@+id/reset_page_question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/reset_page_question1"
        android:hint="what is you date of birth"/>

    <Button
        android:id="@+id/reset_page_confirmation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Verify"
        android:background="@drawable/button"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@+id/reset_page_question2"/>
</RelativeLayout>